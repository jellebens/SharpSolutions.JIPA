<UserControl x:Name="userControl"
    x:Class="SharpSolutions.JIPA.Controls.PowerConsumtionTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SharpSolutions.JIPA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:t="using:WinRTXamlToolkit.Controls"
    xmlns:m="using:SharpSolutions.JIPA.Models"
    mc:Ignorable="d"
    d:DataContext="{d:DesignData Source=/SampleData/PowerConsumption.json, Type=m:PowerConsumptionModel}"
    Height="160"
    Width="160" >
    <UserControl.DataContext>
        <m:PowerConsumptionModel />
    </UserControl.DataContext>

    <Border Margin="5">
        <t:Gauge
                    Minimum="{Binding Min, ElementName=userControl}"
                    Maximum="{Binding Max, ElementName=userControl}"
                    Value="{Binding Power}"
                    NeedleBrush="Transparent"
                    ScaleTickBrush="Transparent"
                    ScaleBrush="DarkSlateGray"
                    TickBrush="Black"
                    TrailBrush="DarkSeaGreen"
                    ValueBrush="DarkSeaGreen"
                    ValueStringFormat="N1"
                    Unit="{Binding Label}"
                    UnitBrush="DarkGray" />
    </Border>

</UserControl>
